<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp" android:layout_marginTop="0dp" android:layout_alignParentTop="true"/>


    <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/imageView"
            android:text="Belal Khan"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#000000" android:layout_toEndOf="@+id/imageView" android:layout_marginStart="15dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/imageView"
            android:background="#000000" />

</RelativeLayout>