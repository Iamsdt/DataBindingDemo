<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton
            android:text="Network"
            android:layout_width="300dp"
            android:padding="20dp"
            android:textSize="25sp"
            app:cornerRadius="25dp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:id="@+id/network"
            app:backgroundTint="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" tools:ignore="HardcodedText"/>
    <com.google.android.material.button.MaterialButton
            android:layout_width="300dp"
            android:padding="20dp"
            android:textSize="25sp"
            app:cornerRadius="25dp"
            android:textAllCaps="false"
            android:text="Room + Network"
            android:layout_height="wrap_content"
            android:id="@+id/room_network"
            app:backgroundTint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/network"
            tools:ignore="HardcodedText"/>
    <com.google.android.material.button.MaterialButton
            android:layout_width="300dp"
            android:padding="20dp"
            android:textSize="25sp"
            app:cornerRadius="25dp"
            android:textAllCaps="false"
            android:text="Room"
            app:backgroundTint="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:id="@+id/room"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/network" tools:ignore="HardcodedText"/>
</androidx.constraintlayout.widget.ConstraintLayout>